{
  "manifest_version": 2,
  "name": "Multilingual Screen Capture OCR",
  "version": "1.2",
  "description": "Captures the current tab and performs multilingual OCR using Tesseract.js",
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://unpkg.com 'unsafe-eval'; object-src 'self'; worker-src blob:"
}